{
  "name": "gryadka",
  "version": "0.2.0",
  "private": true,
  "homepage": ".",
  "main": "build/electron/main.js",
  "author": "Sergey Khokhlachev <sergey@khokhlachev.com>",
  "description": "Gryadka s pomidorami app",
  "scripts": {
    "start": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "test": "jest",
    "postinstall": "electron-builder install-app-deps",
    "electron:dev": "vite",
    "electron:build": "rm -rf {build,dist}/ && vite build && electron-builder",
    "lint:ts": "tsc --noEmit",
    "storybook": "storybook dev",
    "build-storybook": "storybook build",
    "release": "./scripts/release.sh",
    "release:patch": "./scripts/release.sh --patch"
  },
  "dependencies": {
    "@tinkoff/utils": "^2.2.1",
    "antd": "^4.21.0",
    "effector": "^23.4.4",
    "effector-react": "^23.3.0",
    "electron-liquid-glass": "^1.1.1",
    "electron-store": "^11.0.2",
    "electron-updater": "^6.7.3",
    "react": "^18.1.0",
    "react-dom": "^18.1.0"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.18.2",
    "@babel/preset-react": "^7.17.12",
    "@babel/preset-typescript": "^7.17.12",
    "@storybook/addon-a11y": "^10.2.1",
    "@storybook/addon-docs": "^10.2.1",
    "@storybook/addon-onboarding": "^10.2.1",
    "@storybook/addon-vitest": "^10.2.1",
    "@storybook/react-vite": "^10.2.1",
    "@storybook/test": "^8.6.15",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^13.3.0",
    "@testing-library/user-event": "^13.5.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^20.11.17",
    "@types/react": "^18.0.12",
    "@types/react-dom": "^18.0.5",
    "@vitejs/plugin-react": "^1.3.2",
    "@vitest/browser-playwright": "^4.0.18",
    "@vitest/coverage-v8": "^4.0.18",
    "autoprefixer": "^10.4.7",
    "babel-jest": "^30.2.0",
    "electron": "^40.0.0",
    "electron-builder": "^26.4.0",
    "electron-devtools-installer": "^4.0.0",
    "esbuild": "^0.27.2",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "playwright": "^1.58.0",
    "postcss": "^8.4.14",
    "prettier": "^2.6.2",
    "prop-types": "^15.8.1",
    "storybook": "^10.2.1",
    "tailwindcss": "^3.1.2",
    "typescript": "^5.3.3",
    "vite": "^5.1.1",
    "vite-plugin-electron": "^0.29.0",
    "vite-plugin-electron-renderer": "^0.14.6",
    "vitest": "^4.0.18"
  },
  "build": {
    "extends": null,
    "files": [
      "build/**/*"
    ],
    "asarUnpack": [
      "node_modules/electron-liquid-glass/**/*"
    ],
    "directories": {
      "buildResources": "assets"
    },
    "mac": {
      "icon": "assets/icon.png",
      "identity": null,
      "target": {
        "target": "default",
        "arch": [
          "arm64"
        ]
      }
    },
    "publish": {
      "provider": "github",
      "owner": "dot-sk",
      "repo": "gryadka-pomodoro"
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
