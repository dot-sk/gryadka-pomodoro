{
  "name": "gryadka",
  "version": "0.1.5",
  "private": true,
  "homepage": ".",
  "main": "build/electron/main.js",
  "author": "Sergey Khokhlachev <sergey@khokhlachev.com>",
  "description": "Gryadka s pomidorami app",
  "scripts": {
    "start": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "test": "jest",
    "postinstall": "electron-builder install-app-deps",
    "electron:dev": "vite",
    "electron:build": "rm -rf {build,dist}/ && vite build && electron-builder",
    "lint:ts": "tsc --noEmit"
  },
  "dependencies": {
    "@tinkoff/utils": "^2.2.1",
    "antd": "^4.21.0",
    "effector": "^22.3.0",
    "effector-localstorage": "^0.5.3",
    "effector-react": "^22.0.6",
    "react": "^18.1.0",
    "react-dom": "^18.1.0"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.18.2",
    "@babel/preset-react": "^7.17.12",
    "@babel/preset-typescript": "^7.17.12",
    "@testing-library/jest-dom": "^5.16.4",
    "@testing-library/react": "^13.3.0",
    "@testing-library/user-event": "^13.5.0",
    "@types/jest": "^27.5.2",
    "@types/node": "^20.11.17",
    "@types/react": "^18.0.12",
    "@types/react-dom": "^18.0.5",
    "@vitejs/plugin-react": "^1.3.2",
    "autoprefixer": "^10.4.7",
    "babel-jest": "^28.1.1",
    "electron": "^40.0.0",
    "electron-builder": "^26.4.0",
    "electron-devtools-installer": "^4.0.0",
    "esbuild": "^0.27.2",
    "jest": "^28.1.1",
    "jest-environment-jsdom": "^28.1.1",
    "postcss": "^8.4.14",
    "prettier": "^2.6.2",
    "tailwindcss": "^3.1.2",
    "typescript": "^5.3.3",
    "vite": "^5.1.1",
    "vite-plugin-electron": "^0.29.0",
    "vite-plugin-electron-renderer": "^0.14.6"
  },
  "build": {
    "extends": null,
    "files": [
      "build/**/*"
    ],
    "directories": {
      "buildResources": "assets"
    },
    "mac": {
      "icon": "assets/icon.png",
      "identity": null,
      "target": {
        "target": "default",
        "arch": [
          "arm64"
        ]
      }
    },
    "publish": null
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
